<!DOCTYPE html>
<html>
<head>
  <title>Veículos em manutenção</title>
  <% include ../Fixos/Declaracoe.ejs %>
</head>
<body>

  <% include ../Fixos/VeiculosNavBar.ejs %>
  
<div class="container">
   <h2>Veículo em manutenção</h2>
  <p>Lista de veículo que estão em manutenção.</p>
  <table class="table">
    <thead>
      <tr>
        <th>Placa</th>
		<th>Marca</th>
        <th>Tipo</th>
        <th>Categoria de CNH</th>
		<th>Status</th>
        <th>Quilometragem</th>
		<th>Combustível</th>
		<th>Usuário</th>
        <th>Ação</th>
      </tr>
    </thead>
    <tbody>
        <% docs.forEach(function(customer){ %>
         <tr>
        	<td> <%= customer.placa %> </td>
       		<td> <%= customer.marca %> </td>			
			<td> <%= customer.tipo %> </td>
            <td> <%= customer.categoriaDeCNH %> </td>
			<td> <%= customer.status %> </td>				
            <td> <%= customer.quilometragem %> </td> 
			<td> <%= customer.combustivel %> </td> 		
			<td> <%= customer.usuarioRespondavel %> </td> 	
            <td><p><a href="/consultas/veiculos/manutencao/<%= customer.placa %>">Mais informações</a></p></td>
         </tr>
         <% }) %>
       </tbody>
  	</table>
</div>

</body>
</html>
